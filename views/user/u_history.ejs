<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <title>History</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="/public/css/background.css" type="text/css" rel="stylesheet"/>
    <link href="/public/css/navbar.css" type="text/css" rel="stylesheet"/>
    <link href="/public/css/u_history.css" type="text/css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,700">
    <link href="/public/css/global.css" type="text/css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
</head>

<body>
    <nav class="navbar news">
        <div class="bnn">
            <div onclick="openSide()" >
            <i class="fa fa-bars fa-3x"></i>
        </div>
            <h1 class="ann">ANNOUNCEMENTS </h1>   
        </div>
    </nav>
    <div id="side-menu" class="sidenav">
        <div class="btn-close" onclick="closeSide()">&times;</div>
        <a href="/home"><i class="fa fa-home" aria-hidden="true"></i> Home</a> 
        <a href="/user/<%= building_id  %>"><i class="fa fa-newspaper"></i> Announcements</a>
        <a href="/user/<%= building_id %>/requests"><i class="fa fa-wrench"></i> Repair Requests</a>
        <a href="/user/<%= building_id %>/history"><i class="fa fa-book"></i> Repair History</a>
        <a href="#"><i class="fa fa-comments"></i>FUTURE UPDATE</a>
        <a href="/settings"><i class="fa fa-cog"></i> Settings</a>          
        
        <span class="border-bottom" style="display:block"></span>
        
        <form action='/logout' method="GET">
            <button class="btn btn-danger logout" type="submit"><i class="fa fa-power-off"></i></button>
        </form>
    </div>
    <div class="history">
        <h2>YOUR REQUEST HISTORY</h2>
    </div>
        <div class="body-page">
            <div class="pending">
                <div class="reqContainer">
                    <h2>Pending Requests</h2>
                    <% problems.forEach( (a,index) => { %>
                    <% if(a.repairs.status === 'pending') { %> 
                    <div class="reqSub" id="<%= index %>">
                        <span class='c'>
                            <h3><%= a.repairs.issue %> </h3>
                            <a id="cancel-btn" href="/user/<%= building_id  %>/history/cancel/<%= a.repairs.id %>" class="btns btn-warning">Cancel Request</a>
                        </span>
                        <% if(a.repairs.comments) { %>
                        <p><%= a.comments %></p>
                        <% } %>
                        <% if(a.repairs.image !== 'no') { %>
                        <img src="/user/<%= building_id  %>/image/<%= a.img._id%>"/>
                        <% } %>
                        <p><span class="text-muted">Request Date: <%= a.repairs.date.toLocaleDateString() %> </span><span style="font-weight: bold;">Scheduled Repair Date: <%=a.repairs.sched_date.toLocaleDateString()%></span></p>
                    </div>
                    <% }}) %>
                </div> 
            </div>
        </div>
    </div>
    <div class='completedContainer'>
        <div class="abc123">
            <div class="comcon">
                <h2>Completed Requests</h2>
                <% problems.forEach( (a,index) => { %>
                    <% if(a.repairs.status === 'completed') { %> 
                    <div class="comSub" id='<%= index %>'>
                        <span class='c'>
                            <h3><%= a.repairs.issue %> </h3>
                        </span>
                        <% if(a.repairs.comments) { %>
                        <p><%= a.repairs.comments %></p>
                        <% } %>
                        <% if(a.repairs.image !== '0x000000') { %>
                            <img src="/user/<%= building_id  %>/image/<%= a.img._id%>"/>
                        <% } %>
                        <p><span class="text-muted">Request Date: <%= a.repairs.date.toLocaleDateString() %> </span><span style="font-weight: bold;">Repair Finished: <%=a.repairs.sched_date.toLocaleDateString()%></span></p>
                    </div>
                <% }})  %>
            </div>
        </div>
    </div>

    <i class="scroll-up" id="scroll-up"><img src="images/upward.gif" class="side_bar up-arrow" alt="" /></i>
</body>
<script src="/public/scripts/navbar.js"></script>
</html>