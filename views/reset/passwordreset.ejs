    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
</head>

<body>
    <div class="resetpw">
        <form class="resetForm" action="/reset/<%=token%>" method="POST">
            <h1>Change Password</h1>
            <label>Enter New Password</label>
            <input type="password" class="form-control" id="newpass" name="newpass" placeholder="New Password" required>
            <input type="password" class="form-control" id="cnewpass" name="cnewpass" placeholder="Confirm Password" required>
            <button type="submit" class="btn btn-r btn-primary" name="button" value="reset">Reset Password</button>
        </form>
    </div>
</body>

