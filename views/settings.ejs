/*Email Subscription*/
.overlay{ 
    position: fixed; 
    top: 0; bottom: 0; left: 0; right: 0; 
    background: rgba(0, 0, 0, 0.7); 
    transition: opacity 500ms; 
    visibility: hidden; 
    opacity: 0; 
}
.overlay:target{ 
    visibility: visible; 
    opacity: 1;
}
#overlay{ 
    font-family: poppins;
}
#overlay .popup{
    margin: auto; 
    padding: 50px 20px;
    background: white; 
    border-radius: 5px; 
    height: 350px; width: 690px; 
    position: fixed;    
    top: 30%;   
    left: 0px; right: 0px; 
    text-align: center;
}
#overlay .popup .close{
    position: absolute; 
    top: 0px;  right: 0px; 
    font-size: 30px;  
    color: white;
    text-align: center; 
    background: grey;  
    height: 40px;  width: 40px;    
    line-height: 40px;
}
#overlay .popup .close:hover{
    color: #0696d8;
}
#overlay .poptitle{   
    font-size: 24px;  
    text-transform: uppercase;  
    color: black;  
    font-weight: bold;  
    letter-spacing: 2px;  
    margin-bottom: 15px;
}
#overlay .boxcontent label{    
    /*max-width: 560px; */    
    font-size: 14px;
}
#overlay #subForm #subemail{    
    background: #EBEBEB;    
    border-radius: 3px;   
    height: 40px; width: 65%;    
    margin: 20px;    
    padding-left: 15px;
}
#overlay #subForm #subname{    
    background: #EBEBEB;    
    border-radius: 3px;    
    height: 40px; width: 65%;    
    margin-bottom: 20px;    
    padding-left: 15px;
}
#overlay #subForm button{       
    background: #089add;    
    padding: 3px 25px;    
    text-transform: uppercase;   
    font-size: 14px;    
    color: white;
    font-weight: bold;    
    line-height: 34px;      
    border-radius: 3px;    
    letter-spacing: 2px;
}
.openpop{
    padding:6px 15px; 
    text-decoration: none !important;
    color:white !important; 
    background:#089add; 
    border-radius: 3px; 
    margin: 20px 20%; 
    font-family:poppins;
    display: inline-block;
    text-align: center; 
    text-transform: uppercase;   
}

/*Change Background*/
.bgimage{
    margin-left: 5%
}

/*Contact Form*/
.sendForm{
    font-family: poppins;
}
