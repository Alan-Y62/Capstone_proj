<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="/public/css/login.css" type="text/css" rel="stylesheet"/>
    <link href="/public/css/background.css" type="text/css" rel="stylesheet"/>
    <link href="/public/css/navbar.css" type="text/css" rel="stylesheet"/>

</head>
<body>
    <nav class="navbar stuff">
        <div class="bnn">
            <div onclick="openSide()" >
            <i class="fa fa-bars fa-3x"></i>
        </div>
            <h1 class="ann">ANNOUNCEMENTS </h1>   
        </div>
    <a href="/m/new" class="btn btn-primary">New ANNOUNCEMENTS</a>
    </nav>
    <div id="side-menu" class="sidenav">
        <div class="btn-close" onclick="closeSide()">&times;</div>
        <a href="/m"><i class="fa fa-newspaper"></i> ANNOUNCEMENTS</a>
        <a href="/m/tenant"><i class="fa fa-address-book" aria-hidden="true"></i> MANAGE TENANTS</a>
        <a href="/m/repair_admin"><i class="fa fa-wrench"></i> REPAIRS REQUESTS</a>
        <a href="#"><i class="fa fa-comments"></i> CHAT MAYBE</a>
        <a href="/m/settings"><i class="fa fa-cog"></i> SETTINGS</a>    
        
        <span class="border-bottom" style="display:block"></span>
        
        <form action='/logout' method="GET">
            <button class="btn btn-danger logout" type="submit"><i class="fa fa-power-off"></i></button>
        </form>
    </div>
    <div class="row">
        <div class="cols1 body-page" onClick="closeSide()">
            <div class='sub-container'><span id='header1'>NEWEST ANNOUNCEMENT</span>
                <% stuff.reverse().forEach( (a,index) => { %>
                    <% if(index == 0 )  { %>
                            <div class="latest-container">
                                <h1 ><%= a.title %></h1>
                                <p ><%= a.body %></p>
                                <p class="text-muted"><%= a.date.toLocaleDateString() %></p> 
                                <a href="/m/edit/<%= a.id %>" class="btn btn-warning">Edit</a> 
                            </div>
                        </div>
                            
                    <% }}) %>
            </div>
        <div class="cols2 subcon2"><span id=header2>OLDER NEWS</span>
            <% stuff.reverse().forEach( (a,index) => { %>    
                <% if(index > 0) { %>
                    <div class="border border-dark text">
                        <h1>  <%= a.title %></h1>
                        <p><%= a.body %></p>
                        <p class = 'date'><%= a.date.toLocaleDateString() %></p>
                        <a href="/m/edit/<%= a.id %>" class="btn btn-warning">Edit</a> 
                    </div>
                <% }}) %>
        </div>
    </div>
</body>
<style>


.welcome {
    color: white
}

.text{
background: rgba(255,255,255,.8);
padding:5px;
}

.date {
    color: rgba(0,0,0,.4);
}

@media screen and (min-width: 941px) {
    .row {
        display: grid;
        grid-template-columns: 50% 50%;
        width: 100vw;
    }
}

.body-page{
    position: relative;
    height:100%;
    width:90%;
    margin-top: 5vh;
    background: black;
    margin-left: 5vw;
}

.subcon2 {
position: relative;
top: 5vh;
background: black;
width: 90%;
margin-left:5vw;
height:80vh;
overflow: auto;
padding-left: 20px;
padding-right: 20px;
}

.subcon2::-webkit-scrollbar-thumb {
  background-color: #d6dee1;
  border-radius: 20px;
  border: 6px solid transparent;
  background-clip: content-box;
}

@media screen and (max-width: 940px) {
    .body-page{
        position: relative;
        width:90vw;
        margin-top: 5vh;
        background: black;
        margin-left: 5vw;
        margin-right: 5vw;
    }

    .subcon2 {
    position: relative;
    top: 5vh;
    background: black;
    padding-left: 50px;
    padding-right: 50px;
    width: 90vw;
    margin-left:5vw;
    margin-right: 5vw;
    }
}

.sub-container {
width: 100%;
font-size: 30px;
padding: 20px;
}


.latest-container {
font: normal;
color: black;
height: 50vh;
padding-left: 3px;
padding-right: 3px;
padding-top: 3px;
background: lightblue;
border-radius: 5px 5px 5px 5px;
}

.border {
    margin-bottom: 20px;
}

h1 {
    font-weight: bold;
    font-size: 50px;
}

#header1 {
    color: white;
    font-size: 40px;
}

#header2 {
    color: white;
    font-size: 40px;
}

</style>

<script>
function openSide(){
    document.getElementById('side-menu').style.width = '300px';
}

function closeSide(){
    document.getElementById('side-menu').style.width = '0px';
}
</script>