<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=\, initial-scale=1.0">
    <title>Requests</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="/public/css/background.css" type="text/css" rel="stylesheet"/>
    <link href="/public/css/a_repair.css" type="text/css" rel="stylesheet"/>
    <link href="/public/css/navbar.css" type="text/css" rel="stylesheet"/>
    <link href="/public/css/global.css" type="text/css" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
</head>
<body>
    <%- include("../partials/build_navGeneric", {title:"Repairs"})%>
    <% if(problems.length !== 0) { %>
        <div class="body-page" onClick="closeSide()">
            <div class="pending">
                <h2>Pending Requests</h2>
                <div class="reqContainer">
                <% problems.forEach( (a) => { %>
                    <% if(a.status === 'pending') { %> 
                        <a class='btn btn-r btn-primary btn-block' href="/admin/<%= building_id  %>/requests/<%= a._id %>"><%= a.issue %> || Tenants name or Apt || Date</a>
                    <% }}) %>
                </div> 
            </div>
        </div>
        <% } else { %>
            <div class="dflt-msg">
                <p> No Active Requests</p>
            </div>
        <% } %>
        <div class='completedContainer'>
            <div class="abc123">
                <h2>Completed Requests</h2>
                <div class="comcon">
                    <% problems.forEach( (a) => { %>
                        <% if(a.status === 'completed') { %>
                        <div class="comSub">
                            <span class='c'>
                                <h3><%= a.issue %> </h3>
                            </span>
                            <p style="font-weight: bold;"><span id="tenant"><%=a.tenant%>,</span><span id="addr"> <%=a.apt%></span></p>
                        <% if(a.comments) { %>
                        <p><%= a.comments %></p>
                        <% } %>
                        <% if(a.image !== 'no') { %>
                            <img src="/admin/<%= building_id  %>/image/<%= a._id%>"/>
                        <% } %>
                        <p><span class="text-muted">Request Date: <%= a.date.toLocaleDateString() %> </span><span style="font-weight: bold;">Scheduled Repair Date: <%=a.sched_date.toLocaleDateString()%></span></p>
                        </div>
                    <% }}) %>
                </div>
            </div>
        </div>
        
        <div>
        <i class="scroll-up" id="scroll-up"><img src="/public/images/upward.gif" class="side_bar up-arrow" alt="" /></i>
        </div>
    </body>
    
    <script src="/public/scripts/scrollTop.js"></script>
    <script src="/public/scripts/navbar.js"></script>

