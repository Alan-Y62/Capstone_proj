<% if(message.length > 0) { %>
    <div class="alert alert-danger">
        <%= message %>
    </div>
<% } %>
<div id="wrapper">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs--12"></div>
        <div class="col-md-4 col-sm-4 col-xs--12">
        <%# form start %>
            <form class="form-container" action='/register' method="POST">
                <div class="form-group">
                <h1><i class="fa fa-building"></i>&nbsp&nbsp Register</h1>
                    <label for='name'>Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                </div>
                <div class="form-group">
                    <label for='email'>Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for='password'>Password</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                </div>
                <div class="form-group">
                    <label for='c_password'> Confirm Password</label>
                    <input type="password" class="form-control" id="password" name="c_password" placeholder="Re-Enter Password" required>
                </div>
                <button type="submit" class="btn btn-default">Register</button>
                <span>&nbsp &nbsp</span>
                <a href="/login">Login</a>
            </form>
            <%# form end %>
        </div>
    <div class="col-md-4 col-sm-4 col-xs--12"></div>
    </div>
</div>